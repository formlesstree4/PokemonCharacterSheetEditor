<UserControl x:Class="PtaSheet.Views.Editor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:PtaSheet.ViewModels"
             mc:Ignorable="d"
             d:DesignWidth="300"
             d:DesignHeight="300"
             xmlns:prism="http://prismlibrary.com/"
             d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True, Type=local:EditorViewModel}"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <TabControl>
            <TabItem Header="Capabilities">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    
                </Grid>
            </TabItem>
            <TabItem Header="Abilities">
                <Grid>
                    <Button Command="{Binding AbilitiesCommand}" Content="Abilities" />
                </Grid>
            </TabItem>
            <TabItem Header="Moves">
                <Grid></Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
